{
  "compilerOptions": {
    // type checking
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,

    // modules
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": ".",

    // emit
    "noEmit": true,
    "outDir": "dist",
    "sourceMap": true,
    "stripInternal": true,

    // js support
    "allowJs": true,
    "checkJs": false,

    // interop constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // environment
    "lib": ["ES2022", "WebWorker", "DOM"],
    "target": "ES2022"
  }
}
