// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "label": "Rspack Watch",
      "problemMatcher": {
        "owner": "rspack",
        "source": "rspack",
        "severity": "error",
        "pattern": [
          {
            "kind": "file",
            "regexp": "^(ERROR) in ([^\\s].*)$",
            "severity": 1,
            "file": 2
          },
          {
            "kind": "file",
            "regexp": "^  \\xD7 (.+):$",
            "message": 1
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^(\\s.*)"
          },
          "endsPattern": {
            "regexp": "^Rspack compiled successfully in ([\\d].*?).?([\\d].*?) m?s$"
          }
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": {
        "kind": "build"
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "label": "Rspack Build",
      "problemMatcher": {
        "owner": "rspack",
        "source": "rspack",
        "severity": "error",
        "pattern": [
          {
            "kind": "file",
            "regexp": "^(ERROR) in ([^\\s].*)$",
            "severity": 1,
            "file": 2
          },
          {
            "kind": "file",
            "regexp": "^  \\xD7 (.+):$",
            "message": 1
          }
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
