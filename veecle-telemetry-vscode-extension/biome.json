{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": ["pkg/**"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "warn",

        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "requireAscii": true,
            "filenameCases": ["kebab-case"]
          }
        },

        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false
          }
        },

        "useThrowOnlyError": "warn"
      },
      "suspicious": {
        "noDoubleEquals": "warn",

        "noExplicitAny": "off"
      }
    }
  },
  "overrides": [
    {
      "include": ["tsconfig.json", ".vscode/*.json"],
      "json": {
        "parser": { "allowComments": true }
      }
    }
  ]
}
